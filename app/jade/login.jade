extends account-layout

block title
    | login

block main-content
    div.container
        form#login-form.form-signin(action='/login',method='POST')
            h1.text-center
                | Sign in
            div.controls
                    div.input-prepend
                        span.add-on
                            i.icon-envelope
                        input#input-email.input-block-level(type='text',placeholder='Email',name="email",value='#{email}')
            div.controls
                    div.input-prepend
                        span.add-on
                            i.icon-lock
                        input#input-password.input-block-level(type='password',placeholder='Password',name="password",value='#{password}')
            if (errMessage!=='')
                div.alert.alert-error.error-message
                    button.close(data-dismiss='alert')
                        &times;
                    strong
                        | #{errMessage}
            label.checkbox
                input(type='checkbox',value='remember-me',name='remember_me') 
                | Remember me
            button#btn-login.btn.btn-success(type='submit')
                | Login
            a.btn.right-button(href='/sign_up')
                | Sign up

    
