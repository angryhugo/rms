extends layout

block title
    | #{title}
append head
    link(rel='stylesheet', href='/static/css/show-resume.css')
    link(rel='stylesheet', href='/assets/vendor/bootstrap/css/datetimepicker.css')
block main-content
    article.container
        section.row.row-style.row-padding-bottom
            div.span12.padding-nav-top
                div.row
                    div.span8
                        div#resume-name.span8.name-content #{resume.name}
                        div#resume-id.span8(style='display:none') #{resume.id}
                        div.row
                            div.span3
                                h3
                                    | Email
                                div#email.contact-info #{resume.email}
                                h3
                                    | Age
                                div#age.contact-info #{resume.age}
                            div.span3.offset1
                                h3
                                    |Gender
                                div#gender.contact-info #{resume.gender}
                                h3
                                    | Address
                                div#address.contact-info #{resume.address}
                            div.span1
                                button#btn-show-edit-resume.btn.btn-color(data-toggle='modal',data-target='#edit-resume',type='button') 编辑
                    div.span4
                        div.span3
                            div.name-content
                                | user
                        div.span1
                            h3
                                | Name
                        div.span2.contact-info.user-name-top #{user.name}
                        div.span3
                            h3
                                | Email
                            div.contact-info #{user.email}
        section.row.row-style.row-padding-bottom
            div.span12.block-left
                div.row
                    div.span8
                        h1
                            | Education
                    div.span4
                        div.span2.offset2
                            button#btn-show-add-education.btn.btn-color(data-toggle='modal', data-target='#edit-education',data-index='#{resume.id}', type='button') 添加

            if educationList.length > 0
                div.span12
                    div.span3
                        h3
                            | University
                    div.span3
                        h3
                            | Period
                    div.span3
                        h3
                            | Major
                - for (var i=0;i<educationList.length;i++)
                    div.span12(id='education-list#{educationList[i].id}')
                        div.span3(id='university#{educationList[i].id}')
                            | #{educationList[i].school}
                        div.span3(id='university-period#{educationList[i].id}')
                            | #{educationList[i].range}
                        div.span3(id='university-major#{educationList[i].id}')
                            | #{educationList[i].major}
                        div.span2
                            button.btn.btn-show-edit-education.btn-color(data-toggle='modal', data-target='#edit-education', data-index='#{educationList[i].id}',type='button') 编辑
                            span
                                button.btn.btn-delete-education.btn-color(type='button', data-index='#{educationList[i].id}') 删除
                                                                  
        section.row.row-style.row-padding-bottom
           div.span12.block-left
                div.row
                    div.span8
                        h1
                            | Projects
                    div.span4
                        div.span2.offset2
                            button#btn-show-add-project.btn.btn-color(data-toggle='modal', data-target='#edit-project',data-index='#{resume.id}', type='button') 添加
            div.span12
                div.tabbable
                    ul.nav.nav-tabs
                        if projectList.length > 0
                            - for (var i=0;i<projectList.length;i++)
                                li(id='project-list#{projectList[i].id}')
                                    a(href="#tab#{projectList[i].id}",data-toggle="tab") pro#{i+1}

                    div.tab-content
                        if projectList.length > 0
                            - for (var i=0;i<projectList.length;i++)
                                div.span11.tab-pane(id="tab#{projectList[i].id}")
                                    div.row
                                        div.span3.project-range(id="company#{projectList[i].id}")
                                            | #{projectList[i].company}
                                        div.span3.project-range(id="company-period#{projectList[i].id}")
                                            | #{projectList[i].range}
                                        div.span2.offset3
                                            button.btn.btn-show-edit-project.btn-color(data-toggle='modal', data-target='#edit-project', data-index='#{projectList[i].id}',type='button') 编辑
                                            span
                                                button.btn.btn-delete-project.btn-color(type='button', data-index='#{projectList[i].id}') 删除
                                    p.first-upper.paragraph-indent(id="company-description#{projectList[i].id}")
                                            | #{projectList[i].description}


    include edit-profile

    include edit-education

    include edit-project

block scripts
    script(type='text/javascript', src='/assets/vendor/bootstrap/js/bootstrap-datetimepicker.js')
    script(type='text/javascript', src='/assets/vendor/jquery/jquery.validate.js')
    script(type='text/javascript', src='/assets/vendor/jquery/jquery.validate.messages_cn.js')
    script(type='text/javascript', src='/assets/js/show-resume.js')