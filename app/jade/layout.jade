            div.navbar-inner
                div.container
                    a.brand(href='/') 
                        i.icon-home RMS
                    a.btn.btn-navbar(data-toggle="collapse",data-target=".nav-collapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    div#navigation.nav-collapse.collapse
                        ul.nav
                            mixin menu-item('#menu-item-index','resume list','/resumes','icon-list')
