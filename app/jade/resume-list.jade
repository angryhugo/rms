extends layout

block title
    | resume list
append head
    //- link(rel='stylesheet', href='/static/css/resume-list.css')
block main-content
    article.container
            section.row.row-style.row-padding-bottom
                div.span12.padding-nav-top
                    div#user-name.span12.name-content #{user.name}
                    div#user-id.span12(style='display:none') #{user.id}
                    div.row
                        div.span3
                            h3
                                | Email
                            div#email.contact-info #{user.email}

            section.row.row-style.row-padding-bottom
                div.span12.block-left
                    div.row
                        div.span8
                            h1
                                | Resume List
                        div.span4
                            div.span2.offset2
                                button#btn-add-resume.btn.btn-color(data-index='#{user.id}', type='button') add

                if resumeList.length > 0
                    div.span12
                        div.span3
                            h3
                                | Name
                        div.span3
                            h3
                                | Email
                        div.span3
                            h3
                                | Address
                    //- - for (var i=0;i<resumeList.length;i++)
                    //-     div.span12(id='resume-list#{resumeList[i].id}')
                    //-         div.span3
                    //-             | #{resumeList[i].name}
                    //-         div.span3
                    //-             | #{resumeList[i].email}
                    //-         div.span3
                    //-             | #{resumeList[i].address}
                    //-         div.span2
                    //-             button.btn.btn-show-resume.btn-color(data-index='#{resumeList[i].id}',type='button') view
                    //-             span
                    //-                 button.btn.btn-delete-resume.btn-color(type='button', data-index='#{resumeList[i].id}') delete
                    each resume in resumeList
                        div.span12(id='resume-list#{resume.id}')
                            div.span3
                                | #{resume.name}
                            div.span3
                                | #{resume.email}
                            div.span3
                                | #{resume.address}
                            div.span2
                                button.btn.btn-show-resume.btn-color(data-index='#{resume.id}',type='button') view
                                span
                                    button.btn.btn-delete-resume.btn-color(type='button', data-index='#{resume.id}') delete


block scripts
    script(type='text/javascript', src='/assets/js/resume-list.js')